@model MVCRentaVehiculos.Models.Vehiculo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Nombre)
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagenUrl)
        </dd>
    </dl>

    <form asp-action="Delete">
        <hr />
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Eliminar" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i>   Eliminar
        </button>
        <a asp-action="Index" class="btn btn-info">
            <i class="fa-solid fa-rotate-left"></i>   Regresar
        </a>
    </form>
</div>
