@model MVCRentaVehiculos.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class = "col-sm-2">
            Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Stock
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagenUrl)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <i class="fa-solid fa-pen-to-square"></i>   Editar
    </a>
    <a asp-action="Index" class="btn btn-info">
        <i class="fa-solid fa-rotate-left"></i>   Regresar
    </a>
</div>
