@model IEnumerable<MVCRentaVehiculos.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Movimiento</h1>

<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <div class="text-end">
                <a asp-controller="Movement" asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>    Agregar
                </a>
            </div>
            <form class="ml-2 d-flex align-items-center">
                <div class="filters mx-4 d-flex align-items-center">
                    <div class="mx-2">
                        <input type="text" class="ml-2 form-control" name="buscar" />
                    </div>
                    <div class="mx-2">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fa-solid fa-magnifying-glass"></i>    Buscar
                        </button>
                    </div>
                    <div class="ml-2">
                        <a class="btn btn-info" asp-action="Index" >
                        <i class="fa-solid fa-brush"></i>   Limpiar
                        </a>
                    </div>
                </div>
            </form>
            <br>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
                <td>
                    <a asp-controller="Movement" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        <i class="fa-solid fa-pen-to-square"></i>   Editar
                    </a>
                    <a asp-controller="Movement" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">
                        <i class="fa-solid fa-circle-info"></i>   Detalles
                    </a>
                    <a asp-controller="Movement" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>   Eliminar
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
